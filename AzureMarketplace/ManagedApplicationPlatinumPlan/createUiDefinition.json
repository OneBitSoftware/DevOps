{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "isWizard": false,
            "basics": {
                "description": "Customized description with **markdown**, see [more](https://www.microsoft.com).",
                "subscription": {
                    "constraints": {
                        "validations": [
                            {
                                "isValid": "[not(contains(subscription().displayName, 'Test'))]",
                                "message": "Can't use test subscription."
                            },
                            {
                                "permission": "Microsoft.Compute/virtualmachines/write",
                                "message": "Must have write permission for the virtual machine."
                            },
                            {
                                "permission": "Microsoft.Compute/virtualMachines/extensions/write",
                                "message": "Must have write permission for the extension."
                            }
                        ]
                    },
                    "resourceProviders": [
                        "Microsoft.Compute"
                    ]
                },
                "resourceGroup": {
                    "constraints": {
                        "validations": [
                            {
                                "isValid": "[not(contains(resourceGroup().name, 'test'))]",
                                "message": "Resourceâ€¯group name can't contain 'test'."
                            }
                        ]
                    },
                    "allowExisting": true
                },
                "location": {
                    "label": "Location (Region)",
                    "defaultValue": "eastus",
                    "toolTip": "The location (region) where the services will be deployed.",
                    "resourceTypes": [
                        "Microsoft.Compute/virtualMachines"
                    ],
                    "allowedValues": [
                        "eastus",
                        "westus2",
                        "northeurope"
                    ],
                    "visible": true
                }
            }
        },
        "basics": [
            {
                "name": "vmName",
                "type": "Microsoft.Common.TextBox",
                "label": "Virtual Machine name",
                "toolTip": "The name of the Virtual Machine.",
                "defaultValue": "qdms-vm",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9A-Z-]{3,79}$",
                    "validationMessage": "The VM Name must be between 3 and 79 characters long and contain letters, numbers and hyphens only."
                }
            },
            {
                "name": "adminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Username",
                "toolTip": "Admin username for the machine",
                "osPlatform": "Linux",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "SSHCredentials",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "authenticationType": "Authentication type",
                    "password": "Password",
                    "confirmPassword": "Confirm password",
                    "sshPublicKey": "SSH public key"
                },
                "toolTip": {
                    "authenticationType": "Authentication Type for the Virtual Machine",
                    "password": "Password for the Virtual Machine",
                    "sshPublicKey": "SSH Public Key for the Virtual Machine"
                },
                "constraints": {
                    "required": true
                },
                "options": {
                    "hideConfirmation": false,
                    "hidePassword": false
                },
                "osPlatform": "Linux",
                "visible": true
            }
        ],
        "steps": [
            {
                "name": "VirtualMachineConfig",
                "label": "Virtual Machine",
                "subLabel": {
                    "preValidation": "Configure the virtual machine's resources and settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Virtual Machine",
                "elements": [
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual machine size",
                        "toolTip": "The size of virtual machine to provision.",
                        "recommendedSizes": [
                            "Standard_D2as_v5",
                            "Standard_D4as_v5",
                            "Standard_D2as_v4",
                            "Standard_D4as_v4"
                        ],
                        "constraints": {
                            "excludedSizes": [
                                "Standard_DS1_v2",
                                "Standard_D2s_v3",
                                "Standard_B1ls",
                                "Standard_B2ms"
                            ]
                        },
                        "osPlatform": "Linux",
                        "count": "1"
                    },
                    {
                        "name": "vmStorageAccount",
                        "type": "Microsoft.Storage.StorageAccountSelector",
                        "label": "Storage account",
                        "toolTip": "Storage Account for Application data and Virtual Machine's diagnostics",
                        "defaultValue": {
                            "type": "Standard_LRS",
                            "name": "[concat('qdmsdiag', take(replace(guid(), '-', ''), 12))]"
                        }
                    },
                    {
                        "name": "publicIpAddress",
                        "type": "Microsoft.Network.PublicIpAddressCombo",
                        "label": {
                            "publicIpAddress": "Public IP Address for the VM",
                            "domainNameLabel": "DNS Prefix for the public IP Address"
                        },
                        "toolTip": {
                            "publicIpAddress": "Public IP Address for the VM",
                            "domainNameLabel": "DNS Prefix for the public IP Address, must be globally unique"
                        },
                        "defaultValue": {
                            "publicIpAddressName": "[concat('qdms-vm-ip-', take(replace(guid(), '-', ''), 12))]",
                            "domainNameLabel": "[concat('qdms-', take(replace(guid(), '-', ''), 12))]"
                        },
                        "options": {
                            "hideExisting": false,
                            "hideNone": false
                        },
                        "constraints": {
                            "required": {
                                "domainNameLabel": true
                            }
                        }
                    },
                    {
                        "name": "virtualNetwork",
                        "type": "Microsoft.Network.VirtualNetworkCombo",
                        "label": {
                            "virtualNetwork": "Virtual network",
                            "subnets": "Subnets"
                        },
                        "toolTip": {
                            "virtualNetwork": "Name of the virtual network",
                            "subnets": "Subnets for the virtual network"
                        },
                        "defaultValue": {
                            "name": "QDMS-VirtualNetwork",
                            "addressPrefixSize": "/16"
                        },
                        "constraints": {
                            "minAddressPrefixSize": "/16"
                        },
                        "subnets": {
                            "subnet1": {
                                "label": "Subnet",
                                "defaultValue": {
                                    "name": "QDMS-Subnet",
                                    "addressPrefixSize": "/24"
                                },
                                "constraints": {
                                    "minAddressPrefixSize": "/24",
                                    "minAddressCount": 12,
                                    "requireContiguousAddresses": false
                                }
                            }
                        }
                    }
                ]
            },
            {
                "name": "StorageAccountConfig",
                "label": "Storage Account",
                "subLabel": {
                    "preValidation": "Configure the storage account settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Storage Account",
                "elements": [
                    {
                        "name": "applicationStorageAccount",
                        "type": "Microsoft.Storage.StorageAccountSelector",
                        "label": "Storage account name",
                        "toolTip": "Storage account that will be used for application data.",
                        "defaultValue": {
                            "name": "storageaccount01",
                            "type": "Premium_LRS"
                        },
                        "options": {
                            "hideExisting": false
                        },
                        "visible": true
                    }
                ]
            },
            {
                "name": "MonitoringConfig",
                "label": "Monitoring & Alerting",
                "subLabel": {
                    "preValidation": "Configure the monitoring and alerting settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Monitoring & Alerting",
                "elements": [
                    {
                        "name": "alertsEmail",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Alerts Email",
                        "defaultValue": "radi@sharepoint.com",
                        "toolTip": "Valid email",
                        "multiLine": false,
                        "constraints": {
                            "required": true,
                            "regex": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$",
                            "validationMessage": "The input value does not represent a valid email address."
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "location": "[location()]",
            "vmName": "[basics('vmName')]",
            "adminUsername": "[basics('adminUsername')]",
            "adminPassword": "[coalesce(basics('SSHCredentials').password, basics('SSHCredentials').sshPublicKey)]",
            "vmSize": "[steps('VirtualMachineConfig').vmSize]",
            "vmStorageAccountNewOrExisting": "[steps('VirtualMachineConfig').vmStorageAccount.newOrExisting]",
            "vmStorageAccountName": "[steps('VirtualMachineConfig').vmStorageAccount.name]",
            "vmStorageAccountType": "[steps('VirtualMachineConfig').vmStorageAccount.type]",
            "vmStorageAccountKind": "[steps('VirtualMachineConfig').vmStorageAccount.kind]",
            "vmStorageAccountResourceGroup": "[steps('VirtualMachineConfig').vmStorageAccount.resourceGroup]",
            "applicationStorageAccountNewOrExisting": "[steps('StorageAccountConfig').applicationStorageAccount.newOrExisting]",
            "applicationStorageAccountName": "[steps('StorageAccountConfig').applicationStorageAccount.name]",
            "applicationStorageAccountType": "[steps('StorageAccountConfig').applicationStorageAccount.type]",
            "applicationStorageAccountKind": "[steps('StorageAccountConfig').applicationStorageAccount.kind]",
            "applicationStorageAccountResourceGroup": "[steps('StorageAccountConfig').applicationStorageAccount.resourceGroup]",
            "virtualNetworkNewOrExisting": "[steps('VirtualMachineConfig').virtualNetwork.newOrExisting]",
            "virtualNetworkName": "[steps('VirtualMachineConfig').virtualNetwork.name]",
            "virtualNetworkAddressPrefixes": "[steps('VirtualMachineConfig').virtualNetwork.addressPrefixes]",
            "virtualNetworkSubnetName": "[steps('VirtualMachineConfig').virtualNetwork.subnets.subnet1.name]",
            "virtualNetworkSubnetPrefix": "[steps('VirtualMachineConfig').virtualNetwork.subnets.subnet1.addressPrefix]",
            "virtualNetworkResourceGroupName": "[steps('VirtualMachineConfig').virtualNetwork.resourceGroup]",
            "publicIpNewOrExisting": "[steps('VirtualMachineConfig').publicIpAddress.newOrExistingOrNone]",
            "publicIpName": "[steps('VirtualMachineConfig').publicIpAddress.name]",
            "publicIpDns": "[steps('VirtualMachineConfig').publicIpAddress.domainNameLabel]",
            "publicIpResourceGroupName": "[steps('VirtualMachineConfig').publicIpAddress.resourceGroup]",
            "publicIPAllocationMethod": "[steps('VirtualMachineConfig').publicIpAddress.publicIPAllocationMethod]",
            "publicIpSku": "[steps('VirtualMachineConfig').publicIpAddress.sku]",
            "alertsEmail": "[steps('MonitoringConfig').alertsEmail]"
        }
    }
}